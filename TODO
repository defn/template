pre-commit:

initialize python project:
    poetry new: poetry new defn-template
    rm -f README.rst
    ignore dist __pycache__

source(cli):
    [tool.poetry.scripts]
    defn-template = "defn_template.cli:main"

    $ cat defn_template/cli.py
    def main():
        print("hello")

development:
    poetry shell
    poetry install
    pytest
    poetry run defn-template
    defn-template

build/publish:
    poetry build
    poetry publish
    pipx install defn-template
    defn-template
